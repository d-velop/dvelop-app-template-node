<header class="mdc-top-app-bar mdc-top-app-bar--fixed">
    <div class="mdc-top-app-bar__row">
        <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start" role="toolbar">
            <a href="vacationrequest/">
                <button class="mdc-icon-button material-icons mdc-top-app-bar__action-item">arrow_back</button>
            </a>
            <span class="mdc-top-app-bar__title mdc-theme--on-primary">{{title}}</span>
        </section>
    </div>
</header>

<main id="name" class="mdc-top-app-bar--short-fixed-adjust flex-vertical">
    <div class="mdc-form-field">
        <label class="mdc-text-field">
            <div class="mdc-text-field__ripple"></div>
            <input id="name-input" class="mdc-text-field__input" type="text" aria-labelledby="name-input-label">
            <span class="mdc-floating-label mdc-floating-label--float-above" id="name-input-label">Name</span>
            <div class="mdc-line-ripple"></div>
        </label>
    </div>
    <div id="from" class="mdc-form-field">
        <label class="mdc-text-field">
            <div class="mdc-text-field__ripple"></div>
            <input id="from-input" class="mdc-text-field__input" type="text" aria-labelledby="from-input-label">
            <span class="mdc-floating-label mdc-floating-label--float-above" id="from-input-label">From</span>
            <div class="mdc-line-ripple"></div>
        </label>
    </div>
    <div id="to" class="mdc-form-field">
        <label class="mdc-text-field">
            <div class="mdc-text-field__ripple"></div>
            <input id="to-input" class="mdc-text-field__input" type="text" aria-labelledby="to-input-label">
            <span class="mdc-floating-label mdc-floating-label--float-above" id="to-input-label">To</span>
            <div class="mdc-line-ripple"></div>
        </label>
    </div>
    <div class="mdc-form-field">
        <div class="mdc-radio">
            <input class="mdc-radio__native-control" type="radio" id="radio-1" name="radios" checked value="Annual leave">
            <div class="mdc-radio__background">
            <div class="mdc-radio__outer-circle"></div>
            <div class="mdc-radio__inner-circle"></div>
            </div>
            <div class="mdc-radio__ripple"></div>
        </div>
        <label for="radio-1">Anual leave</label>
        <div class="mdc-radio">
            <input class="mdc-radio__native-control" type="radio" id="radio-2" name="radios" value="Special leave">
            <div class="mdc-radio__background">
            <div class="mdc-radio__outer-circle"></div>
            <div class="mdc-radio__inner-circle"></div>
            </div>
            <div class="mdc-radio__ripple"></div>
        </div>
        <label for="radio-2">Special leave</label>
        <div class="mdc-radio">
            <input class="mdc-radio__native-control" type="radio" id="radio-3" name="radios" value="Compensatory off time">
            <div class="mdc-radio__background">
            <div class="mdc-radio__outer-circle"></div>
            <div class="mdc-radio__inner-circle"></div>
            </div>
            <div class="mdc-radio__ripple"></div>
        </div>
        <label for="radio-3">Compensatory off time</label>
    </div>
    <div class="row mdc-form-field">
        <label class="mdc-text-field">
            <div class="mdc-text-field__ripple"></div>
            <input id="comment-input" class="mdc-text-field__input" type="text" aria-labelledby="comment-input-label">
            <span class="mdc-floating-label mdc-floating-label--float-above" id="comment-input-label">Comment</span>
            <div class="mdc-line-ripple"></div>
        </label>
    </div>

    <button class="mdc-button mdc-button--raised" onclick="onClickSave()">
        <div class="mdc-button__ripple"></div>
        <span class="mdc-button__label">Save</span>
    </button>

    <div id="error"></div>
    <script async src={{script}}></script>
</main>
